@model Lekarna.Web.ViewModels.Pharmacies.PharmacyDeleteViewModel
@{
    this.ViewData["Title"] = "Delete pharmacy";
}

    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 form">
                    <h3>Are you sure you want to delete pharmacy @Model.Name ?</h3>
                    <form class="row mb-3" method="post">
                        <div class="col-4 col-md-auto">
                            <button class="btn btn-danger btn-lg" type="submit" asp-area="" asp-controller="Pharmacies" asp-action="DeletePharmacy" asp-route-id="@Model.Id"><i class="fa fa-trash"></i>Delete</button>
                            <button class="btn btn-outline-warning btn-lg" type="submit" asp-area="" asp-controller="Pharmacies" asp-action="Details" asp-route-id="@Model.Id"><i class="fa fa-undo"></i> Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>