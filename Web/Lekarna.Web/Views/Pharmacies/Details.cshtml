@model Lekarna.Web.ViewModels.Pharmacies.PharmacyDetailsViewModel
@{
    this.ViewData["Title"] = Model.Name;
}

@if (this.TempData["Notification"] != null)
{
    <div class="alert alert-success">
        @this.TempData["Notification"]
    </div>
}

<h1>Pharmacy - @this.ViewData["Title"]</h1>


<h1>Address @Model.Address</h1>
<h1>Country @Model.Country</h1>
<h1>Number of Orders: @Model.OrdersCount</h1>
<h1>@Model.NewImage</h1>
<img src="@Model.ImageUrl" class="img-thumbnail height: 100px; width: 100px;" />
<h1>Created by @Model.UserUsername</h1>
<a asp-controller="Pharmacies" asp-action="Edit" asp-route-id="@Model.Id" class="btn bg-warning">Edit</a>
<input type="submit" value="Edit" class="btn bg-warning">