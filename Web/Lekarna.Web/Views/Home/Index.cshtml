@using Lekarna.Common
@model Lekarna.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = $"Welcome to {GlobalConstants.SystemName}!";
}

<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators mb-4">
        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="item">
                <img src="~/images/5.jpg" class="d-block w-100" alt="Categories">
                <div class="carousel-caption d-none d-md-block mb-5">
                    <h5>
                        <a class="btn btn-lg btn-outline-light font-weight-normal text-lg" asp-controller="Offers" asp-action="All">Active Offers</a>
                    </h5>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="item">
                <img src="~/images/1.jpg" class="d-block w-100" alt="Suppliers">
                <div class="carousel-caption d-none d-md-block mb-5">
                    <h5>
                        <a class="btn btn-lg btn-outline-light font-weight-normal text-lg" asp-controller="Suppliers" asp-action="All">Suppliers</a>
                    </h5>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="item">
                <img src="~/images/3.jpg" class="d-block w-100" alt="Pharmacy">
                <div class="carousel-caption d-none d-md-block mb-5">
                    <h5>
                        <a class="btn btn-lg btn-outline-light font-weight-normal text-lg" asp-controller="Pharmacies" asp-action="All">Pharmacies</a>
                    </h5>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="item">
                <img src="~/images/2.jpg" class="d-block w-100" alt="Categories">
                <div class="carousel-caption d-none d-md-block mb-5">
                    <h5>
                        <a class="btn btn-lg btn-outline-light font-weight-normal text-lg" asp-controller="Categories" asp-action="All">Categories</a>
                    </h5>
                </div>
            </div>
        </div>

    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon w-25 h-25" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
        <span class="carousel-control-next-icon w-25 h-25" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
