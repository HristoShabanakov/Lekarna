@model Lekarna.Web.ViewModels.Suppliers.SupplierViewModel
@{
    this.ViewData["Title"] = Model.Name;
}

<h1 class="display 3">@Model.Name</h1>

<div class="card">
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Medicine</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Target</th>
            </tr>
        </thead>
        @foreach (var offer in Model.Offers)
        {
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td><i class="far fa-copyright"></i>@offer.Name</td>
                    <td><i class="fas fa-prescription-bottle-alt"></i>@offer.Medicine</td>
                    <td><i class="fas fa-euro-sign"></i>@offer.Price</td>
                    <td><i class="fas fa-plus"></i>@offer.Quantity</td>
                    <td><i class="fas fa-chart-line"></i>@offer.Target</td>
                </tr>
            </tbody>
        }
    </table>
    </div>
