@model Lekarna.Web.ViewModels.Medicines.MedicineImportViewModel

@if (this.TempData["Notification"] != null)
{
    <div id="element" class="alert alert-danger">
        @this.TempData["Notification"]
    </div>
}

<div class="col-md-4">
    <form method="post" asp-area="Administration" asp-controller="Medicines" asp-action="Records" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"> </div>

        <div class="form-group">
            <label asp-for="Data">Import medicines</label>
            <input type="file" asp-for="Data" class="form-control" />
            <span asp-validation-for="Data" class="text-danger"></span>
        </div>

        <hr />

        <input type="submit" class="btn btn-primary" />
    </form>
</div>

@section footer{

}

<script>
    let notification = document.getElementById("element");
    notification.addEventListener('click', (event) => event.currentTarget.style.display = 'none');
</script>