@model Lekarna.Web.ViewModels.Categories.CategoryViewModel
@{
    this.ViewData["Title"] = Model.CategoryName;
    var index = 0;
}

@if (this.TempData["Notification"] != null)
{
    <div id="element" class="alert alert-success">
        @this.TempData["Notification"]
    </div>
}

<h1 class="display 3 text-center">@Model.CategoryName</h1>

<div class="card">
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th scope="col"><i class="fas fa-sort-down"></i></th>
                <th scope="col">Name</th>
                <th scope="col">Details</th>
            </tr>
        </thead>
        @foreach (var offer in Model.Offers)
        {
            <tbody>
                <tr>
                    <th scope="row">@(++index)</th>
                    <td>@offer.Name</td>
                    <td>
                      <a asp-area="Administration" asp-controller="Offers" asp-action="Details" asp-route-id="@offer.Id" class="btn btn-primary">Info</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>

<hr class="hr-2 bg-info mt-4" />

<div>
    <a asp-area="Administration" asp-controller="Categories" asp-action="Edit" asp-route-id="@Model.Id" class="btn bg-warning">Edit</a>
    <a asp-area="Administration" asp-controller="Categories" asp-action="Delete" asp-route-id="@Model.Id" type="submit" class="btn btn-danger">Delete</a>
</div>

@section footer{

}


<script>
    let notification = document.getElementById("element");
    notification.addEventListener('click', (event) => event.currentTarget.style.display = 'none');
</script>