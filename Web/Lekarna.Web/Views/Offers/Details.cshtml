@model Lekarna.Web.ViewModels.Offers.OfferViewModel
@{
    this.ViewData["Title"] = Model.Name;
    var index = 0;
}
@if (this.TempData["Notification"] != null)
{
    <div class="alert alert-success">
        @this.TempData["Notification"]
    </div>
}

<h1 class="text-center">Offer - @Model.Name</h1>

<div class="d-flex justify-content-between row">
    <div class="col-md-5">
        <div>
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Medicine</th>
                        <th scope="col">Price</th>
                        <th scope="col">Target</th>
                    </tr>
                </thead>
                @foreach (var medicine in Model.Medicines)
                {
                    <tbody>
                        <tr>
                            <th scope="row">@(++index)</th>
                            <td>@medicine.Name</td>
                            <td>@medicine.Price</td>
                            <td>@medicine.Target</td>
                            <td>
                                <button class="btn btn-primary font-weight-bold" data-toggle="modal" data-target="#orderModal"  data-id="@Model.MedicineId" >Order</button>
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
        <hr class="hr-2 bg-info mt-4" />
        <div class="mt-4 d-flex justify-content-around">
            <a asp-controller="Offers" asp-action="Edit" asp-route-id="@Model.Id" class="btn bg-warning">Edit</a>
            <a asp-controller="Offers" asp-action="Delete" asp-route-id="@Model.Id" class="btn bg-danger">Delete</a>
        </div>
    </div>
</div>


<div class="modal fade" id="orderModal" tabindex="-1" role="dialog" aria-labelledby="orderModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orderModalLabel">Order - @Model.MedicineId</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="order-form" method="post" asp-controller="Offers" asp-action="Order">
                    <div class="form-group">
                        <label for="quantity" class="col-form-label font-weight-bold">Quantity</label>
                        <input type="number"
                               class="form-control"
                               id="quantity"
                               name="quantity"
                               value="orderModal">
                        <input type="hidden" data-id="@Model.MedicineId" name="productId" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="complete-order-button">Complete</button>
            </div>
        </div>
    </div>
</div>



<script>
    $('#complete-order-button').click(function () {
        $('#order-form').submit();
    });
</script>