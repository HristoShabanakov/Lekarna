@model Lekarna.Web.ViewModels.Offers.OfferViewModel
@{
    this.ViewData["Title"] = Model.Name;
    var index = 0;
}

<h1 class="text-center">Offer - @Model.Name</h1>


<div class="card">
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th scope="col"><i class="fas fa-sort-down"></i></th>
                <th scope="col">Medicine</th>
                <th scope="col">Price</th>
                <th scope="col">Target</th>
                <th scope="col">Discount</th>
            </tr>
        </thead>
        @foreach (var medicine in Model.Medicines)
        {
            <tbody>
                <tr>
                    <th scope="row">@(++index)</th>
                    <td>@medicine.Name</td>
                    <td>@medicine.Price</td>
                    <td>@medicine.TargetQuantity</td>
                    <td>@medicine.DiscountQuantity</td>
                </tr>
            </tbody>
        }
    </table>
</div>

<hr class="hr-2 bg-info mt-4" />

<div>
    <a class="btn-lg btn-warning" asp-area="Administration" asp-controller="Offers" asp-route-id="@Model.Id" asp-action="Edit">Edit</a>
    <a class="btn-lg btn-danger" asp-area="Administration" asp-controller="Offers" asp-route-id="@Model.Id" asp-action="Delete">Delete</a>
</div>

